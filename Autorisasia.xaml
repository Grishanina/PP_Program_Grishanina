<Page x:Class="WPF_WPF.Autorisasia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1300"
      Title="Autorisasia">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="24" HorizontalAlignment="Center">Авторизация</TextBlock>
            <GroupBox Header="Логин" Margin="0,30,0,0">
                <TextBox x:Name="login" Width="260"></TextBox>
            </GroupBox>
            <GroupBox Header="Пароль" Margin="0,20,0,40">
                <TextBox x:Name="pass" Width="260"></TextBox>
            </GroupBox>
            <Button x:Name="Go" Width="220" Height="38" Margin="0,0,0,30" Click="Go_Click">Вход</Button>
            <Button x:Name="Register" Width="220" Height="38" Click="Register_Click">Регистрация</Button>
        </StackPanel>

    </Grid>
</Page>
